---
import Layout from '../layouts/Layout.astro';

// Sample blog posts data - in a real application, this would come from a CMS or markdown files
const blogPosts = [
	{
		title: "Getting Started with Astro",
		excerpt: "Learn how to build modern websites with Astro, the all-in-one web framework that delivers lightning-fast performance.",
		date: "2024-01-15",
		readTime: "5 min read",
		category: "Web Development",
		slug: "getting-started-with-astro"
	},
	{
		title: "The Future of Web Development",
		excerpt: "Exploring emerging trends and technologies that are shaping the future of web development in 2024.",
		date: "2024-01-10",
		readTime: "8 min read",
		category: "Technology",
		slug: "future-of-web-development"
	},
	{
		title: "Building Responsive Designs",
		excerpt: "Best practices for creating responsive web designs that work seamlessly across all devices and screen sizes.",
		date: "2024-01-05",
		readTime: "6 min read",
		category: "Design",
		slug: "building-responsive-designs"
	},
	{
		title: "JavaScript Performance Tips",
		excerpt: "Optimize your JavaScript code for better performance with these practical tips and techniques.",
		date: "2024-01-01",
		readTime: "7 min read",
		category: "Programming",
		slug: "javascript-performance-tips"
	},
	{
		title: "CSS Grid vs Flexbox",
		excerpt: "A comprehensive comparison of CSS Grid and Flexbox, and when to use each layout method.",
		date: "2023-12-28",
		readTime: "9 min read",
		category: "CSS",
		slug: "css-grid-vs-flexbox"
	},
	{
		title: "My Journey into Web Development",
		excerpt: "Sharing my personal experience and lessons learned while transitioning into web development.",
		date: "2023-12-25",
		readTime: "4 min read",
		category: "Personal",
		slug: "journey-into-web-development"
	}
];

const categories = ["All", "Web Development", "Technology", "Design", "Programming", "CSS", "Personal"];
---

<Layout>
	<main class="blog-container">
		<section class="blog-hero">
			<h1>My Blog</h1>
			<p class="blog-subtitle">Thoughts on technology, development, and life</p>
		</section>

		<section class="blog-content">
			<div class="blog-sidebar">
				<div class="sidebar-card">
					<h3>Categories</h3>
					<div class="category-list">
						{categories.map(category => (
							<a href="#" class={`category-link ${category === 'All' ? 'active' : ''}`}>
								{category}
							</a>
						))}
					</div>
				</div>

				<div class="sidebar-card">
					<h3>Recent Posts</h3>
					<div class="recent-posts">
						{blogPosts.slice(0, 3).map(post => (
							<div class="recent-post">
								<h4><a href={`/blog/${post.slug}`}>{post.title}</a></h4>
								<p class="recent-date">{post.date}</p>
							</div>
						))}
					</div>
				</div>

				<div class="sidebar-card">
					<h3>Newsletter</h3>
					<p>Subscribe to get notified about new posts!</p>
					<form class="newsletter-form">
						<input type="email" placeholder="Your email" class="newsletter-input" />
						<button type="submit" class="newsletter-btn">Subscribe</button>
					</form>
				</div>
			</div>

			<div class="blog-main">
				<div class="blog-posts">
					{blogPosts.map(post => (
						<article class="blog-post">
							<div class="post-header">
								<span class="post-category">{post.category}</span>
								<span class="post-date">{post.date}</span>
							</div>
							<h2 class="post-title">
								<a href={`/blog/${post.slug}`}>{post.title}</a>
							</h2>
							<p class="post-excerpt">{post.excerpt}</p>
							<div class="post-footer">
								<span class="read-time">{post.readTime}</span>
								<a href={`/blog/${post.slug}`} class="read-more">Read More â†’</a>
							</div>
						</article>
					))}
				</div>

				<div class="pagination">
					<button class="pagination-btn" disabled>Previous</button>
					<span class="pagination-info">Page 1 of 1</span>
					<button class="pagination-btn" disabled>Next</button>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	.blog-container {
		min-height: calc(100vh - 80px);
		padding: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.blog-hero {
		text-align: center;
		padding: 3rem 0;
		margin-bottom: 3rem;
	}

	.blog-hero h1 {
		font-size: 2.5rem;
		font-weight: bold;
		margin-bottom: 1rem;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.blog-subtitle {
		font-size: 1.25rem;
		color: #4b5563;
	}

	.blog-content {
		display: grid;
		grid-template-columns: 1fr 3fr;
		gap: 3rem;
		align-items: start;
	}

	.blog-sidebar {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.sidebar-card {
		background: rgba(255, 255, 255, 0.8);
		padding: 2rem;
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
	}

	.sidebar-card h3 {
		font-size: 1.3rem;
		margin-bottom: 1rem;
		color: #111827;
	}

	.category-list {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.category-link {
		color: #4b5563;
		text-decoration: none;
		padding: 0.5rem 0;
		transition: color 0.2s ease;
		border-bottom: 1px solid transparent;
	}

	.category-link:hover,
	.category-link.active {
		color: #3245ff;
		border-bottom-color: #3245ff;
	}

	.recent-posts {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.recent-post h4 {
		margin: 0 0 0.5rem;
		font-size: 1rem;
	}

	.recent-post h4 a {
		color: #111827;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.recent-post h4 a:hover {
		color: #3245ff;
	}

	.recent-date {
		font-size: 0.9rem;
		color: #6b7280;
		margin: 0;
	}

	.newsletter-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.newsletter-input {
		padding: 0.75rem;
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: 8px;
		background: rgba(255, 255, 255, 0.5);
		font-size: 0.9rem;
	}

	.newsletter-input:focus {
		outline: none;
		border-color: #3245ff;
	}

	.newsletter-btn {
		padding: 0.75rem;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		color: white;
		border: none;
		border-radius: 8px;
		font-weight: 600;
		cursor: pointer;
		transition: transform 0.2s ease;
	}

	.newsletter-btn:hover {
		transform: translateY(-2px);
	}

	.blog-main {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.blog-posts {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.blog-post {
		background: rgba(255, 255, 255, 0.8);
		padding: 2rem;
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.blog-post:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
	}

	.post-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
	}

	.post-category {
		background: rgba(50, 69, 255, 0.1);
		color: #3245ff;
		padding: 0.3rem 0.8rem;
		border-radius: 15px;
		font-size: 0.8rem;
		font-weight: 500;
	}

	.post-date {
		color: #6b7280;
		font-size: 0.9rem;
	}

	.post-title {
		margin: 0 0 1rem;
		font-size: 1.5rem;
	}

	.post-title a {
		color: #111827;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.post-title a:hover {
		color: #3245ff;
	}

	.post-excerpt {
		color: #4b5563;
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.post-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.read-time {
		color: #6b7280;
		font-size: 0.9rem;
	}

	.read-more {
		color: #3245ff;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.read-more:hover {
		color: #bc52ee;
	}

	.pagination {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		padding: 2rem 0;
	}

	.pagination-btn {
		padding: 0.75rem 1.5rem;
		background: rgba(255, 255, 255, 0.8);
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: 8px;
		color: #4b5563;
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.pagination-btn:hover:not(:disabled) {
		background: rgba(255, 255, 255, 1);
		color: #111827;
	}

	.pagination-btn:disabled {
		opacity: 0.5;
		cursor: not-allowed;
	}

	.pagination-info {
		color: #4b5563;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.blog-container {
			padding: 1rem;
		}

		.blog-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.blog-hero h1 {
			font-size: 2rem;
		}

		.post-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.post-footer {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.pagination {
			flex-direction: column;
			gap: 1rem;
		}
	}
</style>
